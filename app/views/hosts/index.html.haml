.row
  .container-fluid
    .panel.panel-default
      .panel-heading
        %big Hosts
        .pull-right= link_to 'New Host', new_host_path, class: 'btn btn-primary btn-sm'
        .clearfix
      %table.table.table-striped.tabled-condensed
        %thead
          %tr
            %th Name
            %th Healthy?
            %th Ip address
            %th Port
            %th Region
            %th{:colspan => "3"}
        %tbody
          - @hosts.each do |host|
            %tr
              %td
                %i.glyphicon.glyphicon-cloud>
                \&nbsp;#{link_to host.name, host}
              %td= host.healthy ? "yes" : "no"
              %td= host.ip_address
              %td= host.port
              %td= host.region.name
              %td= link_to 'Check Health', healthcheck_host_path(host), method: :get
              %td= link_to 'Edit', edit_host_path(host)
              %td= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' }
