<!DOCTYPE html>
<html>
<head>
  <title>Hyperdock</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/containers">HyperDock</a>
    </div>
 <% if current_user %>

    <ul class="nav navbar-nav navbar-right">
      <li><a href="#"><%= current_user.email %></a></li>
      <% if current_user.has_invitations_left? %>
        <li><%= link_to "Invite (#{current_user.invitation_limit})", new_user_invitation_path %></li> 
      <% end %>
      <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li> 
    </ul>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <% if current_user.admin? %>
          <li><%= link_to 'Images', images_path %></li>
          <li><%= link_to 'Regions', regions_path %></li>
          <li><%= link_to 'Hosts', hosts_path %></li>
        <% end %>
        <li><%= link_to 'Containers', containers_path %></li>
      </ul>
    </div><!-- /.container-fluid -->
  <% end %>

    </nav>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
