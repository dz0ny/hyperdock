<h1>Listing images</h1>
<table class="table table-bordered table-condensed table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Port Bindings</th>
      <th>Docker index</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><i class="glyphicon glyphicon-th"/>&nbsp;<%= image.name %></td>
        <td><%= image.description %></td>
        <td><%= image.port_bindings %></td>
        <td><%= image.docker_index %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image', new_image_path %>
